    BlackLabel:
        text: "mscale:"
    TextInput:
        text: ""
        multiline: False
    TextInput:
        text: ""
        multiline: False
    TextInput:
        text: ""
        multiline: False
    
    # row 6: multizone
    BlackLabel:
        text: "multizone:"
    BoxLayout:
        orientation: "horizontal"    
        BlackLabel:
            text: "on"
        CheckBox:
            group: "multizone"    
            on_active: root.checkboxSelected(self, self.active, "on")  
        BlackLabel:
