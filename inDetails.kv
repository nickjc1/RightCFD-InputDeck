<Separator@Widget>:
    size_hint_y: None  # In order to control the height manually
    height: 5 # Thickness of the separator line
    canvas:
        Color:
            rgba: 0, 0, 0, 1  # Black color for the line
        Rectangle:
            size: self.size
            pos: self.pos


<SecondScreen>:
    name: "inDetails"
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Accordion:
            id: acco  
            orientation: "vertical"
            AccordionItem:
                id: panelOne    
                title: "Mesh Partitioning/Manipulation and Simulation Control" 
                # min_space: 35
                ScrollView:
                    orientation: "vertical"
                    MeshAndSimuControlLayout:

            AccordionItem:
                id: panelTwo    
                title: "Simulation Control"
                Label:
                    text: "the Second Pannel"
                    font_size: 50    
            AccordionItem:
                id: panelThree    
                title: "Third"
                Label:
                    text: "the Third Pannel"
                    font_size: 50    

        MyButton:
            text: "back"
            size_hint: (1, 0.1)
            on_release: root.back2Navi()

        