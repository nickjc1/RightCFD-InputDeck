#:include customizedComponents.kv

<InFileDetailsScreen>
    name: "inDetails"
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Accordion:
            id: acco  
            orientation: "vertical"
            AccordionItem:
                id: panelOne    
                title: "Mesh Partitioning/Manipulation and Simulation Control" 
                # min_space: 35
                ScrollView:
                    id: panelOneScrollView
                    orientation: "vertical"
                    MeshAndSimuControlLayout:
                        id: meshAndSimuControlLayout

            AccordionItem:
                id: panelTwo    
                title: "Simulation Control"
                Label:
                    text: "the Second Pannel"
                    font_size: 50    
            AccordionItem:
                id: panelThree    
                title: "Third"
                Label:
                    text: "the Third Pannel"
                    font_size: 50    

        BoxLayout:
            size_hint: (1, 0.06)
            orientation: "horizontal"

            MyButton:
                text: "Save"
                # size_hint: (1, 0.1)
                on_release: root.saveAs()
            MyButton:
                text: "Cancel"
                on_release: root.cancel()


        